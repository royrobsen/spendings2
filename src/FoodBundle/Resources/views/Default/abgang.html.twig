{% extends 'base.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Abgang</h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Tabelle
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <form action="" method="post"> 
                               <table class="table">
                                   <tr>
                                       <th>Gekauft am</th>
                                       <th>Ablaufdatum</th>
                                       <th>Menge</th>
                                       <th>Abgang</th>
                                   </tr>
                                   {% for foodMain in foods%}
                                       {% for food in foodMain.foodData%}
                                   <tr>
                                       <td>{{food.purchaseDate.date|date('d.m.Y')}}</td>
                                       <td>{{food.expireDate.date|date('d.m.Y')}}</td>
                                       <td>{{food.amount}}</td>
                                       <td><input class="form-control" name="{{food.id}}" value="{{food.abgang}}"/></td>
                                   </tr>
                                   {% endfor %}
                                   {% endfor %}
                               </table>
                               <button class="btn btn-info">Speichern</button>
                                </form>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>               
        </div>

    </div> 
</div>
                            <script>  $('#sandbox-container input').datepicker({
                                   });</script>
{% endblock %}
