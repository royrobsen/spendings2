{% extends 'base.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Einkaufsliste</h1>
            <div class="row">
                <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Menge</th>
                                            <th>Funktionen</th>
                                        </tr>
                                        {% for item in shoppinglist %}
                                        <tr>
                                            <td>{{item.foodMain.foodName}}</td>
                                            <td>{{item.amount}}</td>
                                            <td><a href="/shoppinglist/delete/{{item.id}}">Erledigt</a></td>
                                        </tr>
                                        {% endfor %}
                                    </thead>
                                </table>
                                </div>
                            </div>
                            <!-- /.table-responsive -->
                </div>
        </div>

    </div> 
</div>

{% endblock %}
