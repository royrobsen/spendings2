{% extends 'base2.html.twig' %}

{% block body %}
        <div class="col-lg-12">
            <h2 class="page-header">Bestand</h2>
            <form id="filter-form"><label>Artikel suchen: </label><input name="filter" class="form-control" id="filter" value="" maxlength="30" size="30" type="text"></form><br />
            <table class="table table-striped table-bordered list"class="sortable-theme-minimal" data-sortable cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gekauft</th>
                        <th>Ablaufdatum</th>
                        <th>Menge</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item1 in data %}
                        {% for item in item1 %}
                    <tr>
                        <td><a href="/bestand/{{item.id}}">{{item.artikelName}}</a></td>
                        <td>{{item.purchaseDate}}</td>
                        <td>{{item.expireDate}}</td>
                        <td>{{item.menge}}</td>
                    </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
