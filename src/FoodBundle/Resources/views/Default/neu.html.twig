{% extends 'base.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Zugang</h1>
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Stammdaten
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                               {{form_start(form)}}
                               <h4>Lebensmittel</h4>
                               {{ form_widget(form.foodMain, { 'attr': {'class': 'form-control'}} ) }}
                                <h4>Menge</h4>
                               {{ form_widget(form.amount, { 'attr': {'class': 'form-control'}} ) }}
                               <h4>Preis</h4>
                               {{ form_widget(form.price, { 'attr': {'class': 'form-control'}} ) }}
                                        </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Daten
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">  
                               <h4>Gekauft am</h4>
                               <div class="form-group row">
                                    <label for="inputKey" class="col-md-1 control-label">Tag</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.purchaseDate.day, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                    <label for="inputValue" class="col-md-1 control-label">Monat</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.purchaseDate.month, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                    <label for="inputValue" class="col-md-1 control-label">Jahr</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.purchaseDate.year, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                </div>
                               <h4>Haltbar bis</h4>
                               <div class="form-group row">
                                    <label for="inputKey" class="col-md-1 control-label">Tag</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.expireDate.day, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                    <label for="inputValue" class="col-md-1 control-label">Monat</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.expireDate.month, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                    <label for="inputValue" class="col-md-1 control-label">Jahr</label>
                                    <div class="col-md-2">
                                    {{ form_widget(form.expireDate.year, { 'attr': {'class': 'form-control'}} ) }}
                                    </div>
                                </div>
                               {{ form_widget(form.save, { 'attr': {'class': 'btn btn-info'}} ) }}
                               {{form_end(form)}}     
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
        </div>

    </div> 
</div>
                            <script>  $('#sandbox-container input').datepicker({
                                   });</script>
{% endblock %}
